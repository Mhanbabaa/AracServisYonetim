@model AracServisYonetim.Controllers.ResetPasswordViewModel
@{
    ViewBag.Title = "Şifre Sıfırla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="modal-header">
    <h2>@ViewBag.Title</h2>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Email)

    <div class="modal-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="alert alert-info">
            <p><strong>@Model.Email</strong> kullanıcısı için yeni şifre belirliyorsunuz.</p>
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.NewPassword, new { @class = "control-label" })
            @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.ConfirmPassword, new { @class = "control-label" })
            @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
        <button type="submit" class="btn btn-primary">Şifreyi Sıfırla</button>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
